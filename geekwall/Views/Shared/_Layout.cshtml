<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    @RenderSection("AdditionalScripts", required: false)
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>@Html.ActionLink("Geeky Reads", "Index")</h1>
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li><a href="http://www.aaronstannard.com/">Aaronontheweb</a></li>
                    <li><a href="http://www.stannardlabs.com/">StannardLabs</a></li>
                    <li><a target="_blank" href="http://del.icio.us/post?url=@Request.Url.AbsoluteUri&amp;title=@Server.UrlEncode("The Great Wall of Geeks")">
                        Bookmark on del.icio.us</a></li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
            <div id="footer">
                <p>
                    Page created using <a href="http://qdfeed.codeplex.com/">Quick and Dirty Feed Parser</a>.</p>
            </div>
            <script type="text/javascript">

                var _gaq = _gaq || [];
                _gaq.push(['_setAccount', 'UA-2285755-6']);
                _gaq.push(['_trackPageview']);

                (function () {
                    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
                })();

            </script>
        </div>
    </div>
</body>
</html>
